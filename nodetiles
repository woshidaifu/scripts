tiles:
  - name: 节点信息
    type: info
    content:
      - 当前节点: $node.name
      - 延迟: $node.ping ms
      - 上传: $traffic.upload MB
      - 下载: $traffic.download MB
  - name: 模式切换
    type: button
    actions:
      - label: 切换到规则模式
        action: set_proxy_mode
        arguments: rule
      - label: 切换到全局代理
        action: set_proxy_mode
        arguments: global
      - label: 切换到直连
        action: set_proxy_mode
        arguments: direct
